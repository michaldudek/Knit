{
    "name": "michaldudek/knit",
    "description": "Simple repository-centric data mapper.",
    "keywords": ["orm", "odm", "datamapper", "database", "mysql", "mongo"],
    "license": "MIT",
    "authors": [
        {
            "name": "Michał Pałys-Dudek",
            "email": "michal@michaldudek.pl"
        }
    ],
    "require": {
        "php": ">=5.5",
        "psr/log": "~1.0",
        "doctrine/dbal": "~2.5",
        "michaldudek/foundation": ">=0.9,<2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8",
        "squizlabs/php_codesniffer": "~2.3",
        "phpmd/phpmd" : "~2.2"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Knit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Knit\\Tests\\": "tests/"
        }
    }
}
